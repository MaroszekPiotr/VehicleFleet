<Window x:Class="VFApp.View.Drivers.DriversWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:VFViewModel.Drivers;assembly=VFViewModel"
        xmlns:local="clr-namespace:VFApp.View.Drivers"
        mc:Ignorable="d"
        Title="DriversWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:DriversVM x:Key="vmDrivers"/>
    </Window.Resources>
    <DockPanel DataContext="{StaticResource vmDrivers}">
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Content="Refresh View"
                        Margin="10,0,10,0"
                        Command="{Binding DriversRefreshListCommand}"
                        x:Name="driverListRefreshBtn"/>
                <Button Content="Add Driver"
                        Margin="10,0,10,0"
                        Click="AddNewDriverClick"/>
            </ToolBar>
        </ToolBarTray>
        <ListView DockPanel.Dock="Left"
                  x:Name="DriversView"
                  Width="200"
                  SelectedValue="{Binding SelectedDriver, Mode=TwoWay}"
                  ItemsSource="{Binding Drivers}">

        </ListView>
        <Grid>

        </Grid>
    </DockPanel>
</Window>
