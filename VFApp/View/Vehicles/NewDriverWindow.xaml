<Window x:Class="VFApp.View.Vehicles.NewDriverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VFApp.View.Vehicles"
        mc:Ignorable="d"
        Title="NewDriverWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Text="VIN:"
                     Margin="0,0,0,10"/>
            <TextBox Text="Vehicle Plate:"
                     Margin="0,0,0,10"/>
            <TextBox Text="Purchase Date:"
                     Margin="0,0,0,10"/>
            <TextBox Text="Initial Kilometers Value:"
                     Margin="0,0,0,10"/>
            <Button Content="Save"/>
            <Button Content="Cancel"/>
        </StackPanel>
        
    </Grid>
</Window>
