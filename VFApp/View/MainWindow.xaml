<Window x:Class="VFApp.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VFApp.View"
        xmlns:vm="clr-namespace:VFViewModel;assembly=VFViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:VehicleFleetVM x:Key="vm"/>
    </Window.Resources>
    <DockPanel DataContext="{StaticResource vm}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New "/>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuFileExit_Click"/>
            </MenuItem>
            <MenuItem Header="Driver">
                <MenuItem Header="New Driver"
                          Command="{Binding NewDriverCommand}"/>
            </MenuItem>
            <MenuItem Header="Vehicle">
                <MenuItem Header="New Vehicle"
                          Command="{Binding NewVehicleCommand}"/>
            </MenuItem>
            <MenuItem Header="About App"></MenuItem>
        </Menu>
        <Grid>
            
        </Grid>
    </DockPanel>
</Window>
